			   cs_fax_num,
			   cs_email_addr,
			   cs_oper_dtime,
			   sv_agreement,
			   sv_private,
			   sv_privateitem,
			   regby,
			   date_format(regdate, '%Y%m%d') AS regdate,
			   uptby,
			   date_format(uptdate, '%Y%m%d') AS uptdate	
		  FROM tbl_shop_env
		 WHERE shop_id = #{shop_id}
		]]>
	</select>
	
	<insert id="insertTbl_shop_env" parameterType="Tbl_shop_env">
