		  FROM tbl_shop_env
		 WHERE shop_id = #{shop_id}
		]]>
	</select>
	
	<select id="getTbl_shop_envByShop_id" parameterType="String" resultType="Tbl_shop_env">
		<![CDATA[
		SELECT shop_id,
			   shop_name, 
			   shop_title, 
			   shop_lic_num, 
			   cp_name, 
			   cp_biz_num, 
