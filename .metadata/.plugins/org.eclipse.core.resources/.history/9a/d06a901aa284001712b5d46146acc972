		                         cp_fax_num,
		                         cp_intro_txt,
		                         cs_phone_num,
		                         cs_fax_num,
		                         cs_email_addr,
		                         cs_oper_dtime,
		                         regby,
		                         regdate,
		                         uptby,
		                         uptdate)
		VALUES (#{shop_id},
				#{shop_name},
		        #{shop_title},
		        #{shop_lic_num},		        
		        #{cp_name},
		        #{cp_biz_num},
		        #{cp_ceo_name},
